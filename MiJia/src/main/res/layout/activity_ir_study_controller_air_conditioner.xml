<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/module_a_3_title_bar_return_more" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/ir_controller_study_air_conditioner_hint"
                android:textColor="@color/ir_text_color_normal"
                android:textSize="@dimen/ir_font_size_huge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ir_controller_bottom_padding"
                android:gravity="center"
                android:text="@string/ir_controller_study_air_conditioner_hint_details"
                android:textColor="@color/ir_text_color_gray"
                android:textSize="@dimen/ir_font_size_normal" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ir_common_padding"
        android:paddingLeft="@dimen/ir_common_padding"
        android:paddingRight="@dimen/ir_common_padding"
        android:visibility="gone">

        <Button
            android:id="@id/ir_report"
            style="?android:borderlessButtonStyle"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/ir_controller_common_button_height"
            android:layout_weight="1.0"
            android:background="@drawable/common_btn_left"
            android:text="@string/ir_report"
            android:textColor="@color/ir_text_color_normal"
            android:textSize="@dimen/ir_font_size_normal" />

        <Button
            android:id="@id/ir_go_matching"
            style="?android:borderlessButtonStyle"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/ir_controller_common_button_height"
            android:layout_weight="1.0"
            android:background="@drawable/common_btn_right"
            android:text="@string/ir_go_matching"
            android:textColor="@color/ir_text_color_normal"
            android:textSize="@dimen/ir_font_size_normal" />
    </LinearLayout>
</LinearLayout>