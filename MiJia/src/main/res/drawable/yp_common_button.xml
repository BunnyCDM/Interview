<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1.0px" android:color="@color/common_divider_line" />
                    <corners android:bottomLeftRadius="5.0dip" android:bottomRightRadius="5.0dip" />
                </shape>
            </item>
            <item android:left="1.0px">
                <shape android:shape="rectangle">
                    <solid android:color="@color/dialog_button_pressed_background" />
                    <corners android:bottomLeftRadius="5.0dip" android:bottomRightRadius="5.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1.0px" android:color="@color/common_divider_line" />
                    <corners android:bottomLeftRadius="5.0dip" android:bottomRightRadius="5.0dip" />
                </shape>
            </item>
            <item android:left="1.0px">
                <shape android:shape="rectangle">
                    <solid android:color="@color/dialog_button_background" />
                    <corners android:bottomLeftRadius="5.0dip" android:bottomRightRadius="5.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>