<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/std_dialog_btn_bg_pressed" />
            <corners android:bottomLeftRadius="@dimen/std_dialog_button_corners" android:bottomRightRadius="@dimen/std_dialog_button_corners" />
            <stroke android:width="1.0px" android:color="@color/std_dialog_btn_bg_pressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/std_dialog_btn_bg_normal" />
            <corners android:bottomLeftRadius="@dimen/std_dialog_button_corners" android:bottomRightRadius="@dimen/std_dialog_button_corners" />
            <stroke android:width="1.0px" android:color="@color/std_dialog_btn_bg_pressed" />
        </shape>
    </item>
</selector>