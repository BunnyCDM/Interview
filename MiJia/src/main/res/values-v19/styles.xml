<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MiuiSupport.Theme.Light" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:alertDialogStyle">@style/MiuiSupport.Widget.AlertDialog</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/miuisupport_scrollbar_thumb_horizontal_light</item>
        <item name="android:scrollbarThumbVertical">@drawable/miuisupport_scrollbar_thumb_vertical_light</item>
        <item name="android:listViewStyle">@style/MiuiSupport.Widget.ListView</item>
        <item name="android:progressBarStyle">@style/MiuiSupport.Widget.ProgressBar</item>
        <item name="android:textSize">15.0sp</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/miuisupport_btn_radio_light</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:dialogTheme">@style/MiuiSupport.Theme.Light.Dialog</item>
        <item name="android:alertDialogTheme">@style/MiuiSupport.Theme.Light.Dialog.Alert</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="miuisupport_immersionBlurMask">@drawable/miuisupport_immersion_blur_mask_light</item>
        <item name="miuisupport_immersionButtonCloseBackground">@drawable/miuisupport_action_mode_immersion_close_light</item>
        <item name="miuisupport_immersionStatusBarStyle">transparentLight</item>
        <item name="miuisupport_immersionTextColor">@color/miuisupport_immersion_text_light</item>
        <item name="miuisupport_immersionViewItemBackground">@drawable/miuisupport_immersion_item_bg_light</item>
        <item name="miuisupport_immersionWindowBackground">@null</item>
        <item name="miuisupport_immersionWindowFooterBackground">@drawable/miuisupport_immersion_window_footer_background_light</item>
        <item name="miuisupport_listViewItemBackground">@drawable/miuisupport_list_item_bg_light</item>
    </style>
    <style name="MiuiSupport.Theme.Light.Dialog" parent="@style/MiuiSupport.Theme.Light">
        <item name="android:windowBackground">@drawable/miuisupport_dialog_bg_light</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.Dialog</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/miuisupport_btn_radio_light</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>
    <style name="Theme.FullScreenDialog" parent="@style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="Theme.Light" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="Theme.Light.Web" parent="@style/Theme.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>
