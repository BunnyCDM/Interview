<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b3000000" />

    <RelativeLayout
        android:id="@+id/userView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27.67dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="27.67dp">

        <EditText
            android:id="@+id/userET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@._"
            android:ems="10"
            android:hint="请输入手机号"
            android:imeOptions="actionNext"
            android:inputType="textVisiblePassword"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textColorHint="#a4a4a4"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/historyCB"
            style="@style/EditTextHistoryCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/userView"
        android:layout_marginStart="27.67dp"
        android:layout_marginEnd="27.67dp"
        android:background="#a4a4a4" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1">

        <RelativeLayout
            android:id="@+id/passRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="27.67dp"
            android:layout_marginTop="14.33dp"
            android:layout_marginEnd="27.67dp">

            <EditText
                android:id="@+id/pwdET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textColorHint="#a4a4a4"
                android:textSize="16sp" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/pwdET"
                android:background="#a4a4a4" />

        </RelativeLayout>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/passRL"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="16dp"
            android:background="@color/backCompany"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>
