<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/line_image"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/base_list_divider_drawable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/global_list_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_provice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="left|center_vertical"
            android:textColor="#ff2f2f2f" />

        <TextView
            android:id="@+id/search_city_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="wh"
            android:textColor="#ff2f2f2f"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>
