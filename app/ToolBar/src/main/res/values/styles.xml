<resources>

    <!-- 主题样式 -->
    <style name="AppTheme.ActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">24sp</item>

        <!-- actionbar隐藏 -->
        <!--<item name="android:windowActionBarOverlay">true</item>-->

        <!--APP打开时先白屏解决办法-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>

        <!--将ActionBar消除-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->

        <!--status bar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!-- 状态栏 -->
        <item name="colorPrimary">@android:color/holo_green_dark</item><!-- 标题栏 -->
        <item name="colorAccent">@color/colorAccent</item><!-- Toolbar -->
        <!--window color-->
        <item name="android:windowBackground">@color/common_white</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@android:color/holo_green_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--主标题-->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#f0f0</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!--子标题-->
    <style name="ToolbarSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">#f0f0</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
